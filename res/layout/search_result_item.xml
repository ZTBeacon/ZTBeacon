<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<!--     <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000" /> -->

    <LinearLayout
        android:id="@+id/search_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01" >

                    <TextView
                        android:id="@+id/search_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="lname"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <!-- <TextView
                        android:id="@+id/search_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:text="ldistance"
                        android:textColor="#000000"
                        android:textSize="12dp" /> -->
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/search_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址:徐汇区石龙路345弄27号"
                    android:textColor="#98999B"
                    android:textSize="15dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp" >

                <TextView
                    android:id="@+id/search_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:drawableLeft="@drawable/search_result_zan"
                    android:text="(990)"
                    android:textColor="#98999B"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/search_ready"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/search_zan"
                    android:drawableLeft="@drawable/search_result_ready"
                    android:text="(3350)        "
                    android:textColor="#98999B"
                    android:textSize="13dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
	<ImageView 
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dip"
	    android:background="@color/item_line"/>
</LinearLayout>